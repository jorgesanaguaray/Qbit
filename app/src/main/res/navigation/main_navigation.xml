<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/mHomeNavigation">

    <fragment
        android:id="@+id/mHomeNavigation"
        android:name="com.jorgesanaguaray.qbit.home.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_mHomeNavigation_to_mAddNavigation"
            app:destination="@id/mAddNavigation"/>

        <action
            android:id="@+id/action_mHomeNavigation_to_mDetailNavigation"
            app:destination="@id/mDetailNavigation"/>

    </fragment>

    <fragment
        android:id="@+id/mAddNavigation"
        android:name="com.jorgesanaguaray.qbit.add.presentation.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add"/>

    <fragment
        android:id="@+id/mDetailNavigation"
        android:name="com.jorgesanaguaray.qbit.detail.presentation.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail"/>

</navigation>